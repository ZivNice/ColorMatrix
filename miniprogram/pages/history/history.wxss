.container {
  padding: 20rpx;
}

.history-list {
  width: 100%;
}

.history-item {
  background: #fff;
  margin-bottom: 20rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.history-time {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.matrix-display {
  margin: 20rpx 0;
}

.matrix-row {
  display: flex;
  justify-content: center;
}

.matrix-cell {
  width: 50rpx;
  height: 50rpx;
  margin: 2rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  border: 1px solid #ccc;
}

.history-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 10rpx;
}

.empty-history {
  text-align: center;
  color: #999;
  padding: 40rpx;
}

/* 颜色样式（与scan.wxss中的相同） */
.color-1 { background-color: purple; color: white; }
.color-2 { background-color: blue; color: white; }
.color-3 { background-color: green; color: white; }
.color-4 { background-color: yellow; color: black; }
.color-5 { background-color: orange; color: black; }
.color-6 { background-color: red; color: white; }
